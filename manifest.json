{
  "name": "Striker Manager View Any Opponent",
  "version": "1.3.1",
  "manifest_version": 2,
  "description": "Adds the view opponent screen for any team",
  "background" : { "scripts" : ["background.js"] },
  "content_scripts": [
    {
      "matches" : ["http://*.strikermanager.com/inicio.php*"],
      "include_globs" : ["http://en*.strikermanager.com*"],
      "js":["jquery-1.8.3.min.js","date.js","getschedule.js"]
    },
    {
      "matches" : ["http://*.strikermanager.com/equipo.php?id=*"],
      "all_frames" : true,
      "include_globs" : ["http://en*.strikermanager.com*"],
      "js":["jquery.js","jScrollpane.js","team.js"]
    },
    {
      "matches" : ["http://*.strikermanager.com/verrival.php?propio=1&otherteam*"],
      "all_frames" : true,
      "include_globs" : ["http://en*.strikermanager.com*"],
      "js":["captureclick.js"]
    },
    {
      "matches" : ["http://*.strikermanager.com/proximos_partidos.php*"],
      "all_frames" : true,
      "include_globs" : ["http://en*.strikermanager.com*"],
      "js":["date.js","winloss.js"]
    }
  ],
  "web_accessible_resources": [
    "source.html",
    "img/gmid.gif",
    "img/gtop.gif",
    "img/gbot.gif",
    "img/fbotscr.gif",
    "img/ftopscr.gif"
  ],
  "permissions": [
    "http://en3.strikermanager.com/",
    "http://en2.strikermanager.com/",
    "http://en1.strikermanager.com/",
    "http://en.strikermanager.com/",
    "storage",
    "tabs"
  ]
}